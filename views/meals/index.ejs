<%- include('../partials/header') %>

    <div class="text-center">
        <div class="row">
            <div class="col-9">
                <p>Daily Meal Tracker</p>
                <table class="table table-striped table-bordered table-hover text-center">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Breakfast</th>
                            <th>Lunch</th>
                            <th>Dinner</th>
                            <th>Snack(s)</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% meals.forEach(function(m) { %>
                            <tr>
                                <td>
                                    <%= m.date.toDateString(); %>
                                </td>
                                <td>
                                    <%= m.breakfast %>
                                </td>
                                <td>
                                    <%= m.lunch %>
                                </td>
                                <td>
                                    <%= m.dinner %>
                                </td>
                                <td>
                                    <%= m.snacks %>
                                </td>
                                <td><a href="/meals/<%=m._id%>">Add/Edit</a></td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="col">
                <p>Weekly Calorie Intake / Money Spent</p>
                <button class="accordion">Oct. 17</button>
                    <div class="panel">
                        <table>
                            <tr>
                                <th>Daily Calories</th>
                                <th>Macro Breakdown</th>
                            </tr>
                            <tr>
                                <td>2200</td> <!-- Hard coded for now -->
                                <td><a href="/">Details</a></td><!-- Hard coded for now -->
                            </tr>
                        </table>
                    </div>
                        <button class="accordion">Oct 17-23</button>
                        <div class="panel">
                            <table>
                                <tr>
                                    <th>Calorie Intake This Week</th>
                                    <th>Money Spent This Week</th>
                                </tr>
                                <tr>
                                    <td><a href="/">15,250</a></td><!-- Hard coded for now -->
                                    <td><a href="/">$250</a></td><!-- Hard coded for now -->
                                </tr>
                            </table>
                        </div>
            </div>
        </div>
    </div>

    <script>
        var acc = document.getElementsByClassName("accordion");
        var i;

        for (i = 0; i < acc.length; i++) {
            acc[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var panel = this.nextElementSibling;
                if (panel.style.display === "block") {
                    panel.style.display = "none";
                } else {
                    panel.style.display = "block";
                }
            });
        }
    </script>

    <%- include('../partials/footer') %>