<%- include('../partials/header') %>

    <div class="text-center">
        <div class="row">
            <div class="column">
                <h2>Add New Meal(s)</h2>
                <form action="/meals" method="post">
                    <div class="form-group">
                        <label>Breakfast:</label>
                        <input type="text" name="breakfast" class="form-control"
                            placeholder="Enter what you had for breakfast">
                        <input type="submit" value="Add meal">
                    </div>
                    <div class="form-group">
                        <label for="lunch">Lunch:</label>
                        <input type="text" name="lunch" class="form-control" placeholder="Enter what you had for lunch">
                        <input type="submit" value="Add meal">
                    </div>
                    <div class="form-group">
                        <label for="dinner">Dinner:</label>
                        <input type="text" name="dinner" class="form-control"
                            placeholder="Enter what you had for dinner">
                        <input type="submit" value="Add meal">
                    </div>
                    <div class="form-group">
                        <label for="snacks">Snack(s):</label>
                        <input type="text" name="snacks" class="form-control" placeholder="Enter if you had any snacks">
                        <input type="submit" value="Add meal">
                    </div>
                </form>
            </div>
            <div class="column">
                <h2>Add Expenses / Add Calories</h2>
                <form action="/meals" method="POST">
                    <div class="form-group">
                        <label>Expenses:</label>
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                            <input type="number" class="form-control" name="expenses" min="0" placeholder="Money spent">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Calories</label>
                        <input type="number" class="form-control" name="calories" min="0" placeholder="C A L O R I E S">
                    </div>
                    <input type="submit" value="Add meal">
                </form>
            </div>

            <%- include('../partials/footer') %>

                <!-- .createdAt -->